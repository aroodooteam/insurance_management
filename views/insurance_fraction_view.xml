<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_insurance_fraction_tree" model="ir.ui.view">
            <field name="name">insurance.fraction.tree</field>
            <field name="model">insurance.fraction</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Insurance fraction">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_insurance_fraction_form" model="ir.ui.view">
            <field name="name">insurance.fraction.form</field>
            <field name="model">insurance.fraction</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Insurance fraction">
                <header>
                </header>
                <sheet>
                    <group colspan="12">
                        <group cols="4">
                            <field name="name"/>
                        </group>
                        <group cols="4">
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

        <record id="view_insurance_fraction_search" model="ir.ui.view">
            <field name="name">insurance.fraction.search</field>
            <field name="model">insurance.fraction</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <search string="Insurance fraction">
                <field name="name" select="True"/>
            </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_insurance_fraction_view">
            <field name="name">Insurance fraction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">insurance.fraction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_insurance_fraction_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_insurance_fraction_view_form">
            <field name="act_window_id" ref="act_open_insurance_fraction_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_insurance_fraction_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_insurance_fraction_view_tree">
            <field name="act_window_id" ref="act_open_insurance_fraction_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_insurance_fraction_tree"/>
        </record>

        <menuitem id="menu_insurance_fraction"
            parent="insurance_management.menu_root_product_insurance"
            sequence="20"
            action="act_open_insurance_fraction_view"/>
    </data>
</openerp>
